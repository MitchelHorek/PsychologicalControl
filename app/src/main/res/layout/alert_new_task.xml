<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/message_task"
        style="@style/edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_height"
        android:layout_marginLeft="@dimen/margin_edit"
        android:layout_marginTop="@dimen/margin_edit"
        android:layout_marginRight="@dimen/margin_edit"
        android:ems="10"
        android:hint="@string/hint_text"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/date_task"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_height"
        android:layout_marginLeft="@dimen/margin_edit"
        android:layout_marginTop="@dimen/margin_edit"
        android:layout_marginRight="@dimen/margin_edit"
        android:ems="10"
        android:inputType="date" />

    <Spinner
        android:id="@+id/category_task"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_height"
        android:layout_marginLeft="@dimen/margin_edit"
        android:layout_marginTop="@dimen/margin_edit"
        android:layout_marginRight="@dimen/margin_edit"/>
</LinearLayout>